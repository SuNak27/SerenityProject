@model SerenPro.Administration.Entities.CetakKartuDetailReportData

@if ((bool?)ViewData["Printing"] == true)
{
  Layout = "_LayoutNoNavigation";
}

<div class="bg-primary text-white" style="background-color: #0d6efd;  padding: 5px;">
  <h4 class="text-center"
    style="padding: 5px; color: white; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">KARTU
    ANGGOTA PERPUSTAKAAN</h4>
</div>
<div style="border: 2px solid gray;">
  <div class="row" style="border: 2px;">
    <div class="col-sm-6">
      <table class="table table-bordered" style="">
        <tr>
          <td rowspan="6">
            <center>
              <img src="~/upload/@Model.Anggota.UserImage" style="width:3cm;" class="img-responsive">
            </center>
          </td>
        </tr>
        <tr class="">
          <td>Kode Anggota</td>
          <td>:</td>
          <td>@Model.Anggota.KodeAnggota</td>
        </tr>
        <tr>
          <td>Nama</td>
          <td>:</td>
          <td>@Model.Anggota.DisplayName</td>
        </tr>
        <tr>
          <td>TTL</td>
          <td>:</td>
          <td>@Model.Anggota.TempatLahir, @Model.Anggota.TanggalLahir.Value.ToString("dd MMMM yyyy")</td>
        </tr>
        <tr>
          <td>Alamat</td>
          <td>:</td>
          <td>@Model.Anggota.Alamat</td>
        </tr>
        <tr>
          <td>Tgl Bergabung</td>
          <td>:</td>
          <td>@Model.Anggota.InsertDate.Value.ToString("dd MMMM yyyy")</td>
        </tr>
      </table>
    </div>
    <div class="col-sm-4 text-center">

    </div>
  </div>
</div>